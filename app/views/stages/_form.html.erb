<%= simple_form_for([@customer, @project, @stage]) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :project_id, :as => :hidden %>
    <%= f.input :name do %>
      <strong><%= @stage.name %></strong>
    <% end %>
    <%= f.input :deadline %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>


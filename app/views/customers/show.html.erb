<% title @customer.name %>

<div class="units">
<% @customer.units.each do |unit| %>
<div class="unit">
<p>
  <b>Name:</b>
  <%= unit.name %>
</p>

<p>
  <b>Physical Address:</b>
  <%= unit.physical_address %>
</p>

<p>
  <b>Postal Address:</b>
  <%= unit.postal_address %>
</p>

<% unit.phones.each do |p| %>
<p>
  <b><%= p.label %>:</b>
  <%= p.number %>
</p>
<% end %>

</div>
<% end %>
</div>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>


<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>State</th>
    <th>Time estimate</th>
    <th>Assigned to</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.state.to_s.humanize %></td>
    <td><%= task.time_estimate %></td>
    <td><%= task.assigned_to.to_s %></td>
    <td><%= task.description %></td>
    <td><%= link_to 'Show', customer_project_task_path(@customer, @project, task) %></td>
    <td><%= link_to 'Edit', edit_customer_project_task_path(@customer, @project, task) %></td>
    <td><%= link_to 'Destroy', customer_project_task_path(@customer, @project, task), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

